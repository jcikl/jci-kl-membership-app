{
  "name": "jci-kl-membership-app",
  "version": "1.0.0",
  "description": "超级国际青年商会管理系统",
  "type": "module",
  "scripts": {
    "dev": "vite --config config/vite.config.ts",
    "build": "tsc --project config/tsconfig.json && vite build --config config/vite.config.ts",
    "preview": "vite preview",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "type-check": "tsc --noEmit --project config/tsconfig.json",
    "setup:firebase": "node scripts/deployment/setup-firebase.js",
    "deploy:netlify": "node scripts/deployment/deploy-netlify.js",
    "init:events": "node scripts/setup/initEventData.js",
    "firebase:emulators": "firebase emulators:start --config config/firebase.json",
    "firebase:deploy": "firebase deploy --config config/firebase.json"
  },
  "dependencies": {
    "@ant-design/charts": "^2.6.4",
    "@google/generative-ai": "^0.24.1",
    "@hookform/resolvers": "^3.3.2",
    "@reduxjs/toolkit": "^2.0.1",
    "antd": "^5.12.8",
    "axios": "^1.6.2",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.10",
    "firebase": "^10.7.1",
    "openai": "^5.20.2",
    "pdfjs-dist": "^5.4.149",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.48.2",
    "react-query": "^3.39.3",
    "react-redux": "^9.0.4",
    "react-router-dom": "^6.20.1",
    "xlsx": "^0.18.5",
    "yup": "^1.4.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@types/xlsx": "^0.0.36",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jest": "^30.1.3",
    "ts-jest": "^29.4.2",
    "typescript": "^5.2.2",
    "vite": "^5.0.8"
  }
